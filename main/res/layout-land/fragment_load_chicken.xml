<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/chickenBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loading_hor_back" />
    </FrameLayout>


    <androidx.constraintlayout.widget.Group
        android:id="@+id/chickenLoadingGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="loadingIcon,chickenProgress" />

    <ImageView
        android:id="@+id/loadingIcon"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loading_icon"
        app:layout_constraintVertical_bias="0.4"/>

    <ProgressBar
        android:id="@+id/chickenProgress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminateTint="@color/achievement_unlocked_bg"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/nointernetBackgrounda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:srcCompat="@drawable/hor_back" />
    <ImageView
        android:id="@+id/nointernetpanel"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:srcCompat="@drawable/check_connection" />
    <TextView
        android:id="@+id/chickenLoadConnectionStateText"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/chickenNotiGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="loadingIcon2,horizontalBackgroundt,chickenNotifText,chickenGrandButton,chickenSkipButton,chickenNotifText2" />

    <ImageView
        android:id="@+id/horizontalBackgroundt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hor_back" />

    <ImageView
        android:id="@+id/loadingIcon2"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/open_icon"
        app:layout_constraintVertical_bias="0.3"/>

    <TextView
        android:id="@+id/chickenNotifText"
        android:layout_width="341dp"
        android:layout_height="78dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="left"
        android:text="ALLOW NOTIFICATIONS ABOUT BONUSES AND PROMOS"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lineHeight="35dp" />

    <Button
        android:id="@+id/chickenGrandButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="97dp"
        android:background="@drawable/btnm"
        android:fontFamily="@font/inter_bold"
        android:shadowColor="@color/chickenTexColor"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/chickenSkipButton"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginStart="420dp"
        android:layout_marginBottom="47dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="Skip"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/frameLayout" />


    <TextView
        android:id="@+id/chickenNotifText2"
        android:layout_width="321dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="left"
        android:letterSpacing="0"
        android:text="Stay tuned with best offers from our casino"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lineHeight="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>